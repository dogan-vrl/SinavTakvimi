@using SinavTakvimi.Models
@model List<DerslikModel>

@{
    ViewBag.Title = "Derslikler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>
                                Derslik Listesi
                            </h3>
                        </div>
                        <div class="col-md-3">
                            <a href="/Derslik/Ekle" class="btn btn-primary ekle-btn">Yeni <i class="fas fa-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12  col-md-12 col-lg-12 col-sm-12">
        <div class="card-box">
            @if (Model.Count() > 0)
            {
                <div class="table-div">
                    <table id="demo-custom-toolbar" class="table table-striped table-bordered dt-responsive nowrap display" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Bolüm</th>
                                <th>Kapasite</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Adi</td>
                                    <td>@item.Bolumu</td>
                                    <td>@item.Kapasitesi</td>
                                    <td  class="pt-8">
                                        <ul class="list-inline">
                                            <li>
                                                <a class="btn btn-primary edit-btn" href="/Derslik/Duzenle/@item.Id">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="btn btn-danger" href="/Derslik/Sil/@item.Id">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>Derslik Yok!</p>
            }
        </div>
    </div>
</div>