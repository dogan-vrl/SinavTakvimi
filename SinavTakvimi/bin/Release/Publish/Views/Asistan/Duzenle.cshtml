@using SinavTakvimi.VeriTabani
@model Asistanlar
@{
    ViewBag.Title = "Asistan Düzenle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>
                                Asistan Düzenle
                            </h3>
                        </div>
                        <div class="col-md-3">
                            <a href="/Asistan/Index" class="btn btn-warning ekle-btn">Geri <i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12  col-md-12 col-lg-6 col-sm-12">
        <div class="card-box">
            <form class="duzenle-form" action="/Asistan/Duzenle" method="post">
                <input class="hidden" type="text" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Adı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="Adi" value="@Model.Adi" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Soyadı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="Soyadi" value="@Model.Soyadi" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Bolümü</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" name="Bolumu">
                            @foreach (var item in (List<Bolumler>)ViewBag.Bolumler)
                            {
                                <option @(item.Id == Model.BolumId ? "selected" : "") value="@item.Id">@item.BolumAdi</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Cinsiyet</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" name="Cinsiyeti">
                            <option @(Model.Cinsiyeti == true ? "selected" : "") value="1">Erkek</option>
                            <option @(Model.Cinsiyeti == false ? "selected" : "") value="0">Kadın</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <button class="form-control btn btn-primary" type="submit">Düzenle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

