@using SinavTakvimi.VeriTabani
@model Dersler
@{
    ViewBag.Title = "Ders Düzenle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>
                                Ders Düzenle
                            </h3>
                        </div>
                        <div class="col-md-3">
                            <a href="/Ders/Index" class="btn btn-warning ekle-btn">Geri <i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12  col-md-12 col-lg-6 col-sm-12">
        <div class="card-box">
            <form class="duzenle-form" action="/Ders/Duzenle" method="post">
                <input class="hidden" type="text" name="Id" value="@Model.Id"required />
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Adı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="DersAdi" value="@Model.DersAdi"required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Kodu</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="DersKodu" value="@Model.DersKodu" required/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Öğrenci Sayısı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="number" name="DersiAlanOgrenciSayisi" value="@Model.DersiAlanOgrenciSayisi" required/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Dersin Hocasi</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="DersinHocasi" value="@Model.DersinHocasi" required/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Bölümü</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" name="BolumId">
                            @foreach (var item in (List<Bolumler>)ViewBag.Bolumler)
                            {
                                <option @(item.Id == Model.BolumId ? "selected" : "") value="@item.Id">@item.BolumAdi</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Engelli Durumu</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" name="EngelliDurumu">
                            <option @(Model.EngelliDurumu == true ? "selected" : "") value="1">Aktif</option>
                            <option @(Model.EngelliDurumu == false ? "selected" : "") value="0">Pasif</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <button class="form-control btn btn-primary" type="submit">Düzenle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

