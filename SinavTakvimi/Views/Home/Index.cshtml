@using SinavTakvimi.Models
@{
    ViewBag.Title = "Sınav Takvimi";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="form-group mb-3 mt-20">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>
                                Sınav Takvimi
                            </h3>
                        </div>
                        <div class="col-md-3 text-right">
                            <a class="btn btn-primary" href="#" id="export">Excele Aktar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12  col-md-12 col-lg-12 col-sm-12">
        <div class="card-box">
            @if (ViewBag.Tablo != null)
            {
                <div class="table-div">
                    <table id="demo-custom-toolbar" class="table table-striped table-bordered dt-responsive nowrap display" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Günler/Saatler</th>
                                <th>08:30-10:00</th>
                                <th>10:30-12:00</th>
                                <th>13:00-14:30</th>
                                <th>15:00-16:30</th>
                                <th>17:00-18:30</th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in (List<SinavTakvimiModel>)ViewBag.Tablo)
                            {
                                <tr>
                                    <td>@item.Tarih.Value.ToString("d MMMM yyyy")</td>
                                    <td>@item.ilksaat</td>
                                    <td>@item.ikincisaat</td>
                                    <td>@item.ucuncusaat</td>
                                    <td>@item.dorduncusaat</td>
                                    <td>@item.besincisaat</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>Sinav Yok!</p>
            }
        </div>
    </div>
</div>

