@using SinavTakvimi.VeriTabani
@{
    ViewBag.Title = "Sekreter Ekle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>
                                Sekreter Ekle
                            </h3>
                        </div>
                        <div class="col-md-3">
                            <a href="/Sekreter/Index" class="btn btn-warning ekle-btn">Geri <i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12  col-md-12 col-lg-6 col-sm-12">
        <div class="card-box">
            <form class="duzenle-form" action="/Sekreter/Ekle" method="post">
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Adı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="Adi" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Soyadı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="Soyadi" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Bolümü</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" name="BolumId">
                            @foreach (var item in (List<Bolumler>)ViewBag.Bolumler)
                            {
                                <option value="@item.Id">@item.BolumAdi</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Kullanıcı Adı</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="KullaniciAdi" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Şifre</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="Sifre" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <button class="form-control btn btn-primary" type="submit">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

